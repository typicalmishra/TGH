doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title New Auction
    link(rel='stylesheet', href='../static/style/homeStyle.css')
    link(rel='stylesheet', href='../static/style/createNewAuctionStyle.css')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css', rel='stylesheet')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/css/selectize.bootstrap3.min.css', integrity='sha256-ze/OEYGcFbPRmvCnrSeKbRTtjG4vGLHXgOqsyLFTRjg=', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    // FOR TRUCKS SELECTION
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.15/css/bootstrap-multiselect.css')
    link(href='https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Mr+Dafoe&display=swap', rel='stylesheet')
  body
    section#bidding-section
      #heading
        h1  Create a New Auction
      include partial/flash-messages.pug   
      form(action='/customer/createNewAuction', method='POST')
        .divs-containing-input
          label.label-inside-form(for='pickUpCity') Select Pick up City:
          .input-div
            select#pickUpCity.input-inside-form(name='pickUpCity')
              option(value='', selected='') Pick Up City 
              option(value='Jabalpur') Jabalpur 
              option(value='Bhopal') Bhopal
              option(value='Gwalior') Gwalior
              option(value='Indore') Indore
              option(value='Chhindwara') Chhindwara
              option(value=' Narsinghpur') Narsinghpur
              option(value=' Seoni')  Seoni
              option(value='Katni')  Katni
              option(value='Mumbai')  Mumbai
              option(value='New Delhi')  New Delhi
        .divs-containing-input
          label.label-inside-form(for='dropCity') Select Drop City:
          .input-div
            select#pick-up-city.input-inside-form(name='dropCity')
              option(value='Jabalpur') Jabalpur 
              option(value='Bhopal') Bhopal
              option(value='Gwalior') Gwalior
              option(value='Indore') Indore
              option(value='Chhindwara') Chhindwara
              option(value=' Narsinghpur') Narsinghpur
              option(value=' Seoni')  Seoni
              option(value='Katni')  Katni
              option(value='Mumbai')  Mumbai
              option(value='New Delhi')  New Delhi
              option(value='', selected='') Drop City 
        .divs-containing-input
          label.label-inside-form(for='load') Select Load: 
          .input-div
            select#load.input-inside-form(name='load')
              option(value='Full Truck Load( Above 3000 kg)') Full Truck Load( Above 3000 kg)
              option(value='Part Truck Load( 500-3000 KG)') Part Truck Load( 500-3000 KG)
              option(value='Parcel( less than 500 Kg)') Parcel( less than 500 Kg)
              option(value='', selected='') Select Load 
        .divs-containing-input
          label.label-inside-form(for='item') Select Item: 
          .input-div
            select#item.input-inside-form(name='item', multiple='multiple')
              option(value='Machinery & spare parts') Machinery & spare parts
              option(value='Electronic') Electronic
              option(value='Building materials') Building materials
              option(value=' Medicine') Medicine
              option(value='Household Goods') Household Goods
              option(value='Food & Agriculture Products') Food & Agriculture Products
              option(value='Perishable goods') Perishable goods
              option(value='Other') Other
              option(value='', selected='') Select Your Item 
        .divs-containing-input
          label.label-inside-form(for='truck') Select the truck you need:
          .input-div
            select#truck.input-inside-form(name='truck')
              option(value='Eicher 14 ft 3.5 Ton ', data-img='../static/img/truck1.png') Eicher 14 ft 3.5 Ton 
              option(value='Eicher 17 ft 5 Ton', data-img='../static/img/truck2.png') Eicher 17 ft 5 Ton
              option(value=' Eicher 19 ft 7 Ton', data-img='../static/img/truck3.png') Eicher 19 ft 7 Ton
              option(value=' 20 ft closed container 6.5 Ton', data-img='../static/img/truck4.png') 20 ft closed container 6.5 Ton
              option(value='6 wheel 9 Ton', data-img='../static/img/truck5.png') 6 wheel 9 Ton
              option(value=' 10 wheel 16 Ton', data-img='../static/img/truck6.png') 10 wheel 16 Ton
              option(value='12 wheel 16 Ton', data-img='../static/img/truck7.png')  12 wheel 16 Ton
              option(value='14 wheel 16 Ton', data-img='../static/img/truck8.png')  14 wheel 16 Ton
              option(value='32 ft single axle 7 Ton', data-img='../static/img/truck9.png')  32 ft single axle 7 Ton
              option(value='32 feet multi axle 14.5 Ton', data-img='../static/img/truck10.png')  32 feet multi axle 14.5 Ton
              option(value='20 feet trailer 16 Ton', data-img='../static/img/truck11.png')  20 feet trailer 16 Ton
              option(value='', selected='') Select Truck 
          .divs-containing-input
            label.label-inside-form(for='datepicker') Date Of Shipping:
            .input-div
              input#datepicker(name='datepicker', data-date-format='dd/mm/yyyy')
          .divs-containing-input
            label.label-inside-form(for='budget') Your Budget: 
            .input-div
              input#budget(name='budget', type='number' , value='â‚¹xxxxx')

          .divs-containing-input
            button#create-auction-button(type='submit') Create Auction
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.12.6/js/standalone/selectize.min.js', integrity='sha256-+C0A5Ilqmu4QcSPxrlGpaZxJ04VjsRjKu+G82kl5UJk=', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/js/bootstrap-datepicker.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js', integrity='sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.15/js/bootstrap-multiselect.js')
    script(src="../static/script/newBidding.js")
    script.
      $('#datepicker').datepicker({
      weekStart: 1,
      autoclose: true,
      todayHighlight: true,
      orientation: "bottom left"
      });
      $('#datepicker').datepicker("setDate", new Date());
      $(document).ready(function () {
      $('select').selectize({
      sortField: 'text',
      });
      });
