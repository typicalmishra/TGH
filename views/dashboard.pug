extends baseDashboardForConsignee.pug
block style
    //- link(rel='stylesheet', href='../static/style/homeStyle.css')
    link(rel='stylesheet', href='../static/style/dashboardStyle.css')
    link(rel='stylesheet', href='../static/style/viewBiddingsStyle.css')

    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
    link(href='https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Mr+Dafoe&display=swap', rel='stylesheet')

block content
      section#sidebar
            ul.ul-inside-sidebar
                li
                    a#username.links-inside-sidebar Hello, #{user.name}
                li
                    a.links-inside-sidebar.active(href='/customer/dashboard') Dashboard
                li
                    a.links-inside-sidebar(href='/currentBookings') Current Booking
                li
                    a.links-inside-sidebar(href='') Payment
                li
                    a.links-inside-sidebar(href='') Tracking
                li
                    a.links-inside-sidebar(href='') Calculator
                li
                    a.links-inside-sidebar(href='') Book by TrucGo
            ul.ul-inside-sidebar
                li
                    a.links-inside-sidebar(href='') Setting
                li
                    a.links-inside-sidebar(href='') Support
                li
                    a.links-inside-sidebar(href='/logout') Log Out   

      section#main-section
        if UserAuctions.length==0
          h1.no-auctions No Auctions Right Now
        else      
          h1#dashboard-heading Your Auctions
          for auction in UserAuctions
            .all-auctions
              .inside-all-auctions Pick Up City: 
                span #{auction.pickUpCity}
              .inside-all-auctions Drop City:  
                span #{auction.dropCity}
              .inside-all-auctions Load: 
                span #{auction.load}
              .inside-all-auctions Items: 
                span #{auction.item}
              .inside-all-auctions Truck: 
                span #{auction.truck}
              .inside-all-auctions Date Of Shipping: 
                span #{auction.datepicker}
              .inside-all-auctions Your Budget: 
                span â‚¹#{auction.budget}
              .inside-all-auctions 
                .divs-containing-input
                  a.buttonLink(href="/viewBids/" + auction._id) View All Bids
              .inside-all-auctions 
                .divs-containing-input
                  a.delete-auction Delete Auction
                  section.delete-auction-section
                        h1 Are You Sure Wanna Delete This Auction?
                        .divs-containing-input
                          a.buttonLink(href='/deleteAuction/' + auction._id) Yes, Delete This Auction
                        .divs-containing-input
                          a.doNotDeleteAuction.buttonLink No, Don't Delete This Auction
          
block script          
          script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
          script(src='../static/script/dashboardScript.js')
