extends base.pug
block style
    title All Auctions | TGH
    link(rel='stylesheet', href='https://unpkg.com/aos@next/dist/aos.css')
    link(rel='stylesheet', href='../static/style/homeStyle.css')
    link(rel='stylesheet', href='../static/style/AllAuctionsWhenNotLoggedInStyle.css')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
block content
      section#main-section-of-all-auction-when-not-logged-in
        if AllAuctions.length==0
          h1.no-auctions No Auctions Right Now
        else
          h1#allAuction-heading All Auctions 
          table
            thead
              tr
                th Route
                th Load Type
                th Budget 
                th Category
                th Get Load
            tbody
              for auction in AllAuctions
                tr
                  td(data-label='Route') #{auction.pickUpCity} - #{auction.dropCity}
                  td(data-label='Load Type') #{auction.load}
                  td(data-label='Budget') â‚¹#{auction.budget}
                  td(data-label='Category') #{auction.item}
                  td(data-label='Get Load') 
                    a(href="/doBid/" +auction._id) Do Bidding
block script    
    link(href='https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap', rel='stylesheet')
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Arvo:wght@700&display=swap")
    link(rel="stylesheet" , href="https://fonts.googleapis.com/css2?family=Slabo+27px&display=swap")
    script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')      
    script(src='https://unpkg.com/aos@next/dist/aos.js')
    script.
      AOS.init({
        offset:120,
        duration:1000,
        once:true,
        delay:0,
      }) 
    script(src='../static/script/dashboardScript.js')
    script(src='../static/script/homeScript.js')         